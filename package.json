{
  "name": "iabank",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": ">=20.0.0 <21",
    "pnpm": ">=9.0.0 <10"
  },
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "pnpm --filter @iabank/frontend-foundation dev",
    "build:frontend": "pnpm --filter @iabank/frontend-foundation build",
    "lint": "pnpm --filter @iabank/frontend-foundation lint",
    "test": "pnpm --filter @iabank/frontend-foundation test",
    "test:watch": "pnpm --filter @iabank/frontend-foundation test:watch",
    "test:coverage": "pnpm --filter @iabank/frontend-foundation test:coverage",
    "test:e2e": "pnpm --filter @iabank/frontend-foundation test:e2e",
    "typecheck": "pnpm --filter @iabank/frontend-foundation typecheck",
    "format": "pnpm exec prettier --check .",
    "format:write": "pnpm exec prettier --write .",
    "openapi:lint": "pnpm exec spectral lint --ruleset=contracts/.spectral.yaml contracts/api.yaml contracts/api.previous.yaml specs/002-f-10-fundacao/contracts/**/*.yaml",
    "openapi:diff": "contracts/scripts/openapi-diff.sh",
    "openapi": "pnpm openapi:lint && pnpm openapi:diff",
    "pact:verify": "pnpm exec vitest run tests/state/query-cache.pact.ts --root frontend",
    "contracts:verify": "pnpm openapi && pnpm pact:verify",
    "sbom:frontend": "pnpm --filter @iabank/frontend-foundation exec cyclonedx-npm --output-file sbom/frontend-foundation.json --output-format json --append-dir",
    "audit:frontend": "pnpm --filter @iabank/frontend-foundation audit --prod --json"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^1.9.0",
    "@pact-foundation/pact": "^13.1.0",
    "@pact-foundation/pact-cli": "^16.1.4",
    "@stoplight/spectral-cli": "^6.11.0",
    "diff": "^5.2.0",
    "openapi-diff": "^0.24.1",
    "typescript": "^5.9.3",
    "vitest": "^2.0.5",
    "yaml": "^2.6.0"
  }
}
