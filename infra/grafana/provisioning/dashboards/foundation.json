{
  "id": null,
  "uid": "iab-foundation-local",
  "title": "IABank Foundation — Observabilidade Local",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP requests por método (req/s)",
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (method) (rate(django_http_requests_total_by_method_total[5m]))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Erro 5xx (%)",
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "targets": [
        {
          "expr": "100 * (sum(rate(django_http_responses_total_by_status_total{status=~\"5..\"}[5m])) / sum(rate(django_http_responses_total_by_status_total[5m])))",
          "legendFormat": "5xx",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latência HTTP p95 (s)",
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(django_http_requests_latency_including_middlewares_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "SC-001 — Duração média (min) por feature",
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "fieldConfig": { "defaults": { "unit": "m" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(sc_001_scaffolding_minutes_sum[5m])) by (feature_slug) / sum(rate(sc_001_scaffolding_minutes_count[5m])) by (feature_slug)",
          "legendFormat": "{{feature_slug}}",
          "refId": "A"
        }
      ]
    }
  ],
  "time": { "from": "now-15m", "to": "now" }
}

