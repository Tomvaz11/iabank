{
  "name": "@iabank/frontend-foundation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm build && playwright test --project=chromium --project=firefox --project=webkit",
    "test:lighthouse": "pnpm build && playwright test --project=lighthouse",
    "typecheck": "tsc --noEmit",
    "foundation:scaffold": "node --loader ./scripts/scaffolding/loader.mjs ./scripts/scaffolding/index.ts",
    "foundation:tokens": "node --loader ./scripts/scaffolding/loader.mjs ./scripts/tokens/index.ts",
    "foundation:otel": "node --loader ./scripts/scaffolding/loader.mjs ./scripts/otel/verify.ts",
    "storybook": "storybook dev -p 6006 --no-open --disable-telemetry",
    "storybook:build": "storybook build --output-dir storybook-static --quiet --disable-telemetry",
    "storybook:test": "storybook test --watch=false --quiet",
    "chromatic:ci": "chromatic --project-token $CHROMATIC_PROJECT_TOKEN --storybook-build-dir=storybook-static --exit-once-uploaded --exit-zero-on-changes --only-changed",
    "chromatic:check": "node --loader ./scripts/scaffolding/loader.mjs ./scripts/chromatic/check-coverage.ts --stories storybook-static/stories.json --verbose"
  },
  "dependencies": {
    "@opentelemetry/api": "1.8.0",
    "@opentelemetry/context-zone": "1.22.0",
    "@opentelemetry/core": "1.22.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.49.1",
    "@opentelemetry/instrumentation": "0.52.0",
    "@opentelemetry/instrumentation-document-load": "0.52.0",
    "@opentelemetry/instrumentation-fetch": "0.52.0",
    "@opentelemetry/instrumentation-user-interaction": "0.52.0",
    "@opentelemetry/resources": "1.22.0",
    "@opentelemetry/sdk-trace-web": "1.22.0",
    "@opentelemetry/semantic-conventions": "1.22.0",
    "@sentry/react": "^8.34.0",
    "@tanstack/react-query": "^5.51.9",
    "configcat-js": "^9.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zone.js": "^0.14.5",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@storybook/addon-a11y": "^8.2.4",
    "@storybook/addon-essentials": "^8.2.4",
    "@storybook/addon-interactions": "^8.2.4",
    "@storybook/react": "^8.2.4",
    "@storybook/react-vite": "^8.2.4",
    "@storybook/test-runner": "^0.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.0",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.0.5",
    "chromatic": "^11.12.5",
    "chrome-launcher": "0.15.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-fsd-boundaries": "link:./scripts/eslint-plugin-fsd-boundaries",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.4.0",
    "jsdom": "^24.1.0",
    "lighthouse": "12.3.0",
    "playwright-lighthouse": "2.0.0",
    "prettier": "^3.3.3",
    "storybook": "^8.2.4",
    "typescript": "^5.9.3",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  }
}
