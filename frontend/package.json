{
  "name": "@iabank/frontend-foundation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "foundation:scaffold": "node --loader ./scripts/scaffolding/loader.mjs ./scripts/scaffolding/index.ts",
    "foundation:tokens": "node --loader ./scripts/scaffolding/loader.mjs ./scripts/tokens/index.ts"
  },
  "dependencies": {
    "configcat-js": "^9.4.0",
    "@tanstack/react-query": "^5.51.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.0",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-fsd-boundaries": "link:./scripts/eslint-plugin-fsd-boundaries",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.4.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  }
}
